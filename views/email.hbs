<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>
    </title>
    <script>
    function validate(){
    //var email = $('emailID input[name="email"]');
    var email = document.myForm.email.value;
    var atpos = email.indexOf("@");
    var dotpos = email.lastIndexOf(".");
    if(atpos <1 || (dotpos-atpos<2)){
      alert('Please enter the valid emailID');
      return false;
    }
    return true;
    }
    </script>
  </head>
  <body>
    <form action="email" method="post" name="myForm" onsubmit="return (validate())">
      <input id="emailID" type="text" name="email" placeholder="Type Here..."/>
      <input type="submit" value="Done"/>
    </form>
  </body>
</html>
